@model MyWatchWatch.Models.Customer
    @{
        ViewBag.Title = "LoginU";
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }

    <!--account-starts-->
    <div class="account">
        <div class="container">
            <div class="account-top heading">
                <h2>ACCOUNT</h2>
            </div>
            <div class="account-main">
                <div class="col-md-6 account-left">
                    <h3>Existing User</h3>
                    @using (Html.BeginForm("LoginU", "LoginUser", FormMethod.Post))
                    {
                    <div class="account-bottom">
                        @Html.LabelFor(model => model.CustomerCode,"UserName")
                        @Html.EditorFor(model => model.CustomerCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerCode, "", new { @class = "text-danger" })

                        @Html.LabelFor(model => model.CustomerPass,"PassWord")
                        @Html.PasswordFor(model => model.CustomerPass, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerPass, "", new { @class = "text-danger" })
                        <div class="address" style="text-align:center;">
                         
                            <button type="submit" class="btn btn-info">Login</button>
                        </div>
                    </div>
                    }
                </div>
                <div class="col-md-6 account-right account-left">
                    <h3>New User? Create an Account</h3>
                    <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
                    <a href="@Url.Action("Register", "Register")">Create an Account</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--account-end-->
