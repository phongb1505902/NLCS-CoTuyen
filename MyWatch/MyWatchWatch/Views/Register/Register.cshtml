@model MyWatchWatch.Models.Customer
@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="section-paddings">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="contact-title">
                    <h2 class="text-center">Register Account</h2>
                </div>
                <div class="contact-form">
                    <div id="contact">
                        <div id="message"></div>
                        @Html.Raw(TempData["msg"])
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <!-- Register Form -->
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                @Html.LabelFor(model => model.CustomerCode,"Username", htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.CustomerCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerCode, "", new { @class = "text-danger" })


                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerPass,"Password", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.CustomerPass, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerPass, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerFullName, "Full Name",htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.CustomerFullName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerFullName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerAddress,"Address", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerPhone, "Phone",htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @id = "datepicker", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
                            </div>
                
                            <div class="form-group">

                                @Html.Captcha(5)
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-send"></i>Register</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}