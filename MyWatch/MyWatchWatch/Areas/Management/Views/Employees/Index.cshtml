@model IEnumerable<MyWatchWatch.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}

<section class="dashboard-header section-padding">
    <div class="container">
        <h2 class="text-center">My Employee</h2>

        <p>
            <a href="@Url.Action("Create", "Employees")" class="btn btn-info">
                Create
            </a>
        </p>
        @Html.Raw(TempData["msg1"])
        <table class="table table-striped table-bordered table-responsive" id="tablefillset">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeGender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </th>
                 
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeAddress)
                    </th>



                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th class="text-center">
                        @if (String.IsNullOrEmpty(item.EmployeImg) == false)
                        {
                            <img style="width: 100px" src="@Url.Content(item.EmployeImg)" />
                        }
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeGender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeAddress)
                    </td>


                    <td class="text-center col-3">
                        <a href="@Url.Action("UploadEmployees", "Employees", new { id = item.EmployeeCode })" class="btn btn-default">
                            <i class="fa fa-image"></i>
                            <span>

                            </span>
                        </a>
                        |
                        <a href="@Url.Action("Edit", "Employees", new { id = item.EmployeeCode})" class="btn btn-default">
                            <i class="fa fa-plus-square"></i>
                            <span>

                            </span>
                        </a>
                        |

                        <a href="@Url.Action("Delete", "Employees", new { id = item.EmployeeCode })" class="btn btn-default">
                            <i class="fa fa-trash"></i>
                            <span>

                            </span>
                        </a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
</section>