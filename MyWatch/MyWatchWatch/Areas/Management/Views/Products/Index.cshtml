@model IEnumerable<MyWatchWatch.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}

<section class="dashboard-header section-padding">
    <div class="container">
        <h2 class="text-center">My Watch</h2>

        <p>
            <a href="@Url.Action("Create", "Products")" class="btn btn-info">
                Create
            </a>
        </p>
        @Html.Raw(TempData["msg1"])
        <table class="table table-striped table-bordered table-responsive" id="tablefillset">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ProductDetails)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ProductStatus)
                    </th>

                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ProductQty)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ProductSold)
                    </th>

                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Category.CategoryName)
                    </th>

                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Supplier.CompanyName)
                    </th>
                    <th class="text-center">Method</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="col-md-3">
                            @Html.DisplayFor(modelItem => item.ProductDetails)
                        </td>
                        @if (item.ProductStatus == true)
                        {
                            <td class="text-center">
                                Yes
                            </td>
                        }
                        else
                        {
                            <td class="text-center">
                                No
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductQty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductSold)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
                        </td>
                        <td class="col-3 text-center">
                            <a href="@Url.Action("Edit", "Products", new { id = item.ProductId })" class="btn btn-default">
                                <i class="fa fa-plus-square"></i>
                                <span>

                                </span>
                            </a>
                            |
                            <a href="@Url.Action("Delete", "Products", new { id = item.ProductId })" class="btn btn-default">
                                <i class="fa fa-trash"></i>
                                <span>

                                </span>
                            </a>
                            |
                            <a href="@Url.Action("UploadProducts", "Products", new { id = item.ProductId })" class="btn btn-default">
                                <i class="fa fa-picture-o"></i>
                                <span>

                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>