@model IEnumerable<MyWatchWatch.Models.Branch>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}

<section class="dashboard-header section-padding">
    <div class="container">
        <h2 class="text-center">Branches 0f Watch</h2>

        <p>
            <a href="@Url.Action("Create", "Branches")" class="btn btn-info">
                Create
            </a>
        </p>
        @Html.Raw(TempData["msg1"])
        <table class="table table-striped table-bordered table-responsive" id="tablefillset">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchDetails)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.EmployeeCode)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-3 text-center">
                            @Html.DisplayFor(modelItem => item.BranchName)
                        </td>
                        <td class="col-6 text-center">
                            @Html.DisplayFor(modelItem => item.BranchDetails)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.EmployeeCode)
                        </td>
                        <td class="col-4 text-center">
                            <a href="@Url.Action("Edit", "Branches", new { id = item.BranchId })" class="btn btn-default">
                                <i class="fa fa-plus-square"></i>
                                <span>

                                </span>
                            </a>
                            |
                            <a href="@Url.Action("Delete", "Branches", new { id = item.BranchId})" class="btn btn-default">
                                <i class="fa fa-trash"></i>
                                <span>

                                </span>
                            </a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>