@model IEnumerable<MyWatchWatch.Models.Category>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}
<section class="dashboard-header section-padding">
    <div class="container">
        <h2 class="text-center">Category 0f Watch</h2>

        <p>
            <a href="@Url.Action("Create", "Categories")" class="btn btn-info">
                Create
            </a>
        </p>
        @Html.Raw(TempData["msg1"])
        <table class="table table-striped table-bordered table-responsive" id="tablefillset">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CategoryDetails)
                    </th>

                    <th class="text-center">Method</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-3">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td class="col-3">
                            @Html.DisplayFor(modelItem => item.CategoryDetails)
                        </td>
                        <td class="col-3 text-center">
                            <a href="@Url.Action("Edit", "Categories", new { id = item.CategoryId })" class="btn btn-default">
                                <i class="fa fa-plus-square"></i>
                                <span>

                                </span>
                            </a>
                            |
                            <a href="@Url.Action("Delete", "Categories", new { id = item.CategoryId })" class="btn btn-default">
                                <i class="fa fa-trash"></i>
                                <span>

                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>