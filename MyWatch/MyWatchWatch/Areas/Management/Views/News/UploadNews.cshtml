@model MyWatchWatch.Models.News
@{
    ViewBag.Title = "UploadNews";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}
<section class="dashboard-header section-padding">
    <div class="container">
        <h2 class=" text-center">Upload IMG of News</h2>
        @using (Html.BeginForm("UploadNews", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <article class="panel panel-info">
                @Html.HiddenFor(model => model.NewsId)
                <div class="panel-heading icon">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Sort</th>
                                <th>IMG</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        @foreach (var item in @Model.ImgNews)
                        {

                            <tbody>
                                <tr>
                                    <th>@item.ImgNewId</th>
                                    <th>@item.News_Img</th>
                                    <th>@item.SortNews</th>
                                    <th><img src="~/MyImg/News/@item.News_Img" width="150" height="150" /></th>
                                    <th>@Html.ActionLink("X", "DeleteImg", new { id = item.ImgNewId, NewsId = item.NewsId }, htmlAttributes: new { onclick = "return confirm('Are you sure Delete Img?');", @class = "btn btn-circle brn-danger" })</th>
                                </tr>
                            </tbody>

                        }
                    </table>
                </div>
                <div class="panel-heading">

                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">File 1:</label>
                            <div class="col-md-10">
                                <input type="file" name="files" id="file1" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">File 2:</label>
                            <div class="col-md-10">
                                <input type="file" name="files" id="file2" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">File 3:</label>
                            <div class="col-md-10">
                                <input type="file" name="files" id="file3" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="id" value="@Model.NewsId" id="spID" />
                    <input type="submit" value="Upload" class="btn btn-primary btn-block" />
                </div>
            </article>


        }


    </div>
</section>
